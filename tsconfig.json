{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "outDir": "javascript/build",
    "noEmitOnError": true,
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": ["javascript/**/*"],
  "exclude": ["node_modules"]
}